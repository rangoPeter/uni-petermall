.goodsContainer {
  margin-top: 20rpx;
}
.goodsContainer .goodsImg {
  width: 100%;
  height: 370rpx;
}
.goodsContainer .goods {
  white-space: nowrap;
}
.goodsContainer .goods .common {
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
}
.goodsContainer .goods .more {
  line-height: 200rpx;
  text-align: center;
  vertical-align: top;
  font-size: 28rpx;
}
.goodsContainer .goods .goods-item {
  display: inline-block;
  margin: 10rpx 20rpx;
  width: 200rpx;
}
.goodsContainer .goods .goods-item text {
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  height: 64rpx;
}

